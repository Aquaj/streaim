<% if @current.name %>
  <h1>
    <%= link_to '<', content_path(@current.parent.path) %>
    <%= @current.name %>
  </h1>
<% else %>
  <h1> COUCOU A√èM </h1>
  <h2> Enjoy your audiobooks </h2>
<% end %>

<ul>
  <% @current.directories.each do |dir| %>
    <li><%= link_to dir.name, content_path(dir.path) %></li>
  <% end %>
  <% @current.audios.each do |audio| %>
    <li>
      <h3><%= audio.name %></h3>
      <%= react_component 'Audio', id: audio.name, action: :show, audio: { path: stream_path(audio.path) } %>
    </li>
  <% end %>
</ul>
